<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.swifiic.examapp"
    android:versionCode="1"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="de.tubs.ibr.dtn.permission.DTN_COMMUNICATION" />
    <uses-permission android:name="in.swifiic.android.app.suta.USER" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="in.swifiic.examapp.MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.swifiic.exam.Questions"
            android:label="@string/title_activity_questions"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="in.swifiic.exam.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="in.swifiic.examapp.MainScreen"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.swifiic.exam.MainScreen" />
        </activity>
        <activity
            android:name="in.swifiic.exam.DrawActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="in.swifiic.examDrawActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.swifiic.exam.ViewStatus"
            android:label="@string/title_activity_view_status" >
        </activity>
        <activity
            android:name="in.swifiic.teacher.TeacherActivity"
            android:label="@string/title_activity_teacher" >
             <intent-filter>
                <action android:name="in.swifiic.teacher.TeacherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.swifiic.teacher.ImportTest"
            android:label="@string/title_activity_import_test" >
            <intent-filter>
                <action android:name="in.swifiic.teacher.ImportTest" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.swifiic.exam.SendSoln"
            android:label="@string/title_activity_send_soln" >
            <intent-filter>
                <action android:name="in.swifiic.exam.SendSoln" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.swifiic.examapp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.swifiic.examapp.MainScreen" />
        </activity>

        <service android:name="in.swifiic.android.app.lib.GenericService" />
        <service android:name="in.swifiic.examapp.ReceiverService" />

        <receiver
            android:name="in.swifiic.android.app.lib.IBRDtnReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="de.tubs.ibr.dtn.permission.DTN_SERVER" >

            <!-- Add intent filter for notification of incoming bundles -->
            <intent-filter>
                <action android:name="de.tubs.ibr.dtn.intent.RECEIVE" />

                <category android:name="in.swifiic.examapp" />
            </intent-filter>
            <!-- Add intent filter for status reports generated by the DTN service -->
            <intent-filter>
                <action android:name="de.tubs.ibr.dtn.intent.STATUS_REPORT" />

                <category android:name="in.swifiic.examapp" />
            </intent-filter>
        </receiver>
        <receiver android:name="in.swifiic.examapp.ExamNoticeReceiver" >
            <intent-filter>
                <action android:name="in.swifiic.app.DATA_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver android:name="in.swifiic.android.app.lib.HubAddressReceiver" >
            <intent-filter>
                <action android:name="swifiic.suta.hubAddressUpdate" />
            </intent-filter>
        </receiver>
        <receiver android:name="in.swifiic.android.app.lib.IdentityReceiver" >
            <intent-filter>
                <action android:name="swifiic.suta.myIdentityUpdate" />
            </intent-filter>
        </receiver>

        <activity
            android:name="in.swifiic.teacher.SelectStudents"
            android:label="@string/title_activity_select_students" >
        </activity>
    </application>

</manifest>